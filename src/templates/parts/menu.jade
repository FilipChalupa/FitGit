nav.navbar.navbar-default
	.container-fluid
		// Brand and toggle get grouped for better mobile display
		.navbar-header
			button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
				span.sr-only Toggle navigation
				span.icon-bar
				span.icon-bar
				span.icon-bar
			a.navbar-brand(href='index.html') Git+LaTeX
		// Collect the nav links, forms, and other content for toggling
		#bs-example-navbar-collapse-1.collapse.navbar-collapse
			ul.nav.navbar-nav
				- var items = {commit: 'Commit', installation: 'Instalace', conflict: 'Konflikt', projects: 'Projekty', history: 'Historie', updates: 'Aktualizace'}
				each title, key in items
					- var isActive = key === page
					li(class=isactive ? 'active' : '')
						a(href=key+'.html')
							= title
							if isActive
								span.sr-only (current)
